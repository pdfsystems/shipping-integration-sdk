{
    "name": "pdfsystems/shipping-integration-sdk",
    "description": "SDK for interfacing with PDF's shipping platform",
    "keywords": [
        "pdf-systems-inc",
        "shipping-integration-sdk"
    ],
    "homepage": "https://github.com/pdfsystems/shipping-integration-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Rob Pungello",
            "email": "rob@pdfsystems.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "rpungello/sdk-client": ">=2.1.3 <3.0",
        "spatie/data-transfer-object": "^3.9"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "laravel/pint": "^1.2",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Pdfsystems\\ShippingIntegrationSdk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pdfsystems\\ShippingIntegrationSdk\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
